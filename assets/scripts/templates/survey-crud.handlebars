<div class="col-xs-4 form">
  <h5 class="text-center">Create Survey</h5>
  <form id="create-survey-form" autocomplete="off">
    <div class="form-group">
      <input type="text" name="survey[title]" id="survey-create-title" class="form-control input" placeholder="Survey Name" required>
    </div>
    <div class="form-group">
      <input type="text" name="survey[question]" id="survey-create-question" class="form-control input" placeholder="Question" required>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <input type="submit" name="create-survey-submit" id="create-survey-submit" class="form-control btn btn-primary" value="Confirm">
        </div>
      </div>
    </div>
  </form>
</div>
<div class="col-xs-4 form">
  <h5 class="text-center">Update Survey</h5>
  <form id="update-survey-form" autocomplete="off">
    <div class="form-group">
      <input type="text" name="survey[_id]" id="survey-update-id" class="form-control input" placeholder="Survey ID" required>
    </div>
    <div class="form-group">
      <input type="text" name="survey[title]" id="survey-update-title" class="form-control input" placeholder="Survey Name" required>
    </div>
    <div class="form-group">
      <input type="text" name="survey[question]" id="survey-update-question" class="form-control input" placeholder="Question" required>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <input type="submit" name="update-survey-submit" id="update-survey-submit" class="form-control btn btn-primary" value="Confirm">
        </div>
      </div>
    </div>
  </form>
</div>
<div class="col-xs-4 form">
  <h5 class="text-center">Get Surveys</h5>
  <div class="col-xs-6 col-xs-offset-3">
    <div class="text-center">
    <input type="button" name="survey-index-button" id="survey-get-all" class="form-control btn btn-primary" value="Get Surveys">
    </div>
  </div>
  <br>
  <br>
  <form id="get-survey-form" autocomplete="off">
    <h5 class="text-center">Get A Survey</h5>
    <div class="form-group">
      <input type="text" name="survey[_id]" id="survey-show" class="form-control input" placeholder="Survey ID" required>
    </div>
    <div class="col-xs-6 col-xs-offset-3">
      <div class="text-center">
      <input type="submit" name="survey-show-button" id="survey-get-one" class="form-control btn btn-primary" value="Get Survey">
      </div>
    </div>
  </form>
</div>
<div>
  <form id="delete-survey-form" autocomplete="off">
    <h5 class="text-center">Delete A Survey</h5>
    <div class="form-group">
      <input type="text" name="survey[_id]" id="survey-delete-crud" class="form-control input" placeholder="Survey ID" required>
    </div>
    <div class="col-xs-6 col-xs-offset-3">
      <div class="text-center">
      <input type="submit" name="survey-delete-button" id="survey-delete" class="form-control btn btn-primary" value="Delete Survey">
      </div>
    </div>
  </form>
</div>
